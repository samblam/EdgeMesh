{
  "dashboard": {
    "title": "EdgeMesh - System Overview",
    "uid": "edgemesh-overview",
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0},
        "title": "Total Devices",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(edgemesh_devices_total)",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "auto"
        }
      },
      {
        "id": 2,
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0},
        "title": "Active Connections",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(edgemesh_connections_active)",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "auto"
        }
      },
      {
        "id": 3,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "title": "Authorization Success Rate",
        "type": "gauge",
        "targets": [
          {
            "expr": "rate(edgemesh_authorization_decisions_total{decision='allow'}[5m]) / rate(edgemesh_authorization_decisions_total[5m])",
            "refId": "A"
          }
        ],
        "options": {
          "orientation": "auto",
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 0.5, "color": "yellow"},
                {"value": 0.9, "color": "green"}
              ]
            },
            "unit": "percentunit"
          }
        }
      },
      {
        "id": 4,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "title": "Healthy vs Unhealthy Devices",
        "type": "timeseries",
        "targets": [
          {
            "expr": "edgemesh_devices_total{status='active'} - edgemesh_unhealthy_devices",
            "legendFormat": "Healthy",
            "refId": "A"
          },
          {
            "expr": "edgemesh_unhealthy_devices",
            "legendFormat": "Unhealthy",
            "refId": "B"
          }
        ],
        "options": {
          "tooltip": {"mode": "single"},
          "legend": {"displayMode": "list", "placement": "bottom"}
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "fillOpacity": 10,
              "showPoints": "never"
            }
          }
        }
      },
      {
        "id": 5,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "title": "Connections by Service",
        "type": "timeseries",
        "targets": [
          {
            "expr": "edgemesh_connections_active",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "options": {
          "tooltip": {"mode": "multi"},
          "legend": {"displayMode": "list", "placement": "bottom"}
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "fillOpacity": 10,
              "showPoints": "never"
            }
          }
        }
      },
      {
        "id": 6,
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16},
        "title": "Authorization Decisions Over Time",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(edgemesh_authorization_decisions_total{decision='allow'}[5m])",
            "legendFormat": "Allowed",
            "refId": "A"
          },
          {
            "expr": "rate(edgemesh_authorization_decisions_total{decision='deny'}[5m])",
            "legendFormat": "Denied",
            "refId": "B"
          }
        ],
        "options": {
          "tooltip": {"mode": "multi"},
          "legend": {"displayMode": "list", "placement": "bottom"}
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "fillOpacity": 10,
              "showPoints": "never"
            }
          }
        }
      }
    ]
  }
}
